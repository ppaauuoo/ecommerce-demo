

<%-include("../partials/widget.ejs",{day: day, link: 'admin'})-%>


<%-include("../partials/pagination.ejs")-%>


<div class="panel panel-default">
  <span id="message"></span>
  <div class="card">
    <div class="card-header">
      <div class="panel-heading">ข้อมูลผู้ใช้</div>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <input type="text" class="form-control" id="searchbar" placeholder="Search Data..." style="margin-bottom: 20px; background-color: wheat;"/>
        <!-- Table -->
        <table class="table table-striped table-bordered text-center" id="Table">
          <tr>
            <th class="text-center" style="width: 15%;">การแก้ไข</th>
            <th class="text-center" style="width: 5%;">Username</th>
            <th class="text-center" style="width: 20%;">ชื่อ-นามสกุล</th>
            <th class="text-center" style="width: 30%;">ที่อยู่</th>
            <th class="text-center" style="width: 30%;">ธนาคาร</th>
            <th class="text-center" style="width: 5%;">เงิน</th>
            <th class="text-center" style="width: 5%;">พ้อย</th>
            
          </tr>
          <tbody id="dataTable">
            
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<dialog class="modal" tabindex="-1" id="action_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="post" id="form">
        <div class="modal-header" id="dynamic_modal_title">
          <h5 class="modal-title">Edit Data</h5>
        </div>
        <div class="modal-body">
          <%-include("admintools/register_form.ejs")-%>
        </div>
        <div class="modal-footer">
          <input type="hidden" name="username" id="username" />
          <input type="hidden" name="action" id="action" value="Edit" />
          <button type="submit" class="btn btn-primary" id="action_button">
            แก้ไข
          </button>
          <button
            type="button"
            class="btn btn-secondary"
            data-dismiss="modal"
          >
            ยกเลิก
          </button>
        </div>
      </form>
    </div>
  </div>
</dialog>




<script src="/js/datatable_script.js"></script>



