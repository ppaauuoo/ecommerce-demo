

<%-include("../partials/widget.ejs",{day: day, link: 'admin'})-%>


<%-include("../partials/pagination.ejs")-%>

<div class="container overflow-auto mb-4 p-0">
  <%-include("../partials/searchbar.ejs")-%>
  <table class="table bg-white text-center">
    <tr>
      <th >หลักฐานการชำระ</th>
      <th >สภานะ</th>
      <th >มูลค่า</th>
      <th >จำนวนสิ่งของ</th>
      <th >Order Id</th>
    </tr>
    <tbody id="dataTable">
    </tbody>
  </table>
</div>

<dialog class="modal" id="action_modal">
  <form method="post" id="form" class="modal-box">
    <h5>ยืนยัน</h5>
    <div class="receipt"></div>
    <input type="hidden" name="orderId" id="orderId" />
    <input type="hidden" name="action" id="action" value="Confirm" />
    <div class="modal-action">

      <button type="submit" class="btn btn-error" id="action_button" onclick="action_modal.close()"
      >
      ยืนยันการชำระเงิน
      </button>
      <button
        type="button"
        class="btn btn-secondary"
        onclick="action_modal.close()"
      >
        ยกเลิก
      </button>
    </div>
  </form>
</dialog>


<script src="/js/order_script.js"></script>



